58         function doSomething() { 
59 	        var invoer3 = prompt("welke gerecht wil u maken?"); 
60 	        var invoer = prompt("Wat is het eerste ingredient dat u wilt gebruiken?"); 
61 	        var invoer2 = prompt("Wat is het tweede ingredient dat u wilt gebruiken?"); 
62 	        var invoer4 = prompt("voor hoeveel minuten gaat u dit mixen?"); 
63 	            confirm("Weet u zeker dat " + invoer3 + " het gerecht is dat u wilt maken?"); 
64 	            confirm("Weet u zeker dat u " + invoer + " als eerste ingredient wilt?"); 
65 	        	confirm("Weet u zeker dat u " + invoer2 + " als tweede ingredient wilt?"); 
66 	        	confirm("Weet u zeker dat u dat voor " + invoer4 + " minuten wilt mixen?"); 
67 	        console.log(invoer); 
68 	         myText.textContent = "Mix " + invoer + " met " + invoer2 + " voor " + invoer4 + " minuten. U heeft nu " + invoer3 + " gemaakt. bon apettit!"; 
